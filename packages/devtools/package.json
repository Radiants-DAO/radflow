{
  "name": "@radflow/devtools",
  "version": "0.1.0",
  "description": "Visual development tools for RadFlow - design system editor with live preview",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.js",
      "require": "./dist/api/index.cjs"
    },
    "./api/handlers/*": {
      "types": "./dist/api/handlers/*.d.ts",
      "import": "./dist/api/handlers/*.js",
      "require": "./dist/api/handlers/*.cjs"
    },
    "./lib/themeUtils": {
      "types": "./dist/lib/themeUtils.d.ts",
      "import": "./dist/lib/themeUtils.js",
      "require": "./dist/lib/themeUtils.cjs"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.cjs"
    }
  },
  "files": [
    "dist",
    "agents",
    "scripts"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "postinstall": "node scripts/postinstall.js"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "next": "^14.0.0 || ^15.0.0 || ^16.0.0",
    "@radflow/ui": "^0.1.0"
  },
  "dependencies": {
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@radflow/ui": "workspace:*",
    "@radflow/theme-rad-os": "workspace:*",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tsup": "^8.3.0",
    "typescript": "^5"
  },
  "keywords": [
    "radflow",
    "devtools",
    "visual-editor",
    "design-system"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Radiants-DAO/radflow.git",
    "directory": "packages/devtools"
  }
}
