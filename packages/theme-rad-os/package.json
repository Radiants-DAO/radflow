{
  "name": "@radflow/theme-rad-os",
  "version": "0.1.0",
  "description": "Rad OS theme for RadFlow - retro pixel aesthetic with warm California vibes",
  "license": "MIT",
  "main": "index.css",
  "style": "index.css",
  "exports": {
    ".": "./index.css",
    "./tokens": "./tokens.css",
    "./dark": "./dark.css",
    "./fonts": "./fonts.css",
    "./typography": "./typography.css",
    "./base": "./base.css",
    "./scrollbar": "./scrollbar.css",
    "./animations": "./animations.css",
    "./components/core": "./components/core/index.ts",
    "./preview/*": "./preview/*.tsx"
  },
  "files": [
    "*.css",
    "agents",
    "components/**/*",
    "preview/**/*"
  ],
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^4.0.0",
    "@radflow/devtools": "^0.1.0"
  },
  "devDependencies": {
    "@radflow/devtools": "workspace:*",
    "@types/react": "^19",
    "typescript": "^5"
  },
  "keywords": [
    "radflow",
    "theme",
    "css",
    "tailwind",
    "rad-os",
    "retro",
    "pixel"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Radiants-DAO/radflow.git",
    "directory": "packages/theme-rad-os"
  },
  "radflow": {
    "type": "theme",
    "displayName": "Rad OS",
    "description": "Retro pixel aesthetic with warm California vibes and System 7 heritage",
    "colorMode": "light",
    "icons": {
      "library": "phosphor",
      "style": "bold",
      "package": "phosphor-react"
    },
    "fonts": {
      "heading": "Joystix Monospace",
      "body": "Mondwest",
      "mono": "PixelCode"
    }
  }
}
